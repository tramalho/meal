<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Detail" parent="AppTheme.Base" />
    <style name="AppTheme.Home" parent="AppTheme.Base" />

    <style name="meal_card_title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginStart">@dimen/card_margin</item>
        <item name="android:layout_marginTop">@dimen/card_title_size</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/card_title_size</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAppearance">?attr/textAppearanceLargePopupMenu</item>
        <item name="android:layout_marginEnd">@dimen/card_margin</item>
        <item name="android:layout_marginRight">@dimen/card_margin</item>
    </style>
    
    <style name="favorite_icon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="exp_toolbar_title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@android:color/transparent</item>
    </style>

</resources>
